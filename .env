# RustDesk Server Configuration

# Domain Configuration
DOMAIN=ariff.aglobaltec.com
RELAY_SERVER=${DOMAIN}:21117
ID_SERVER=${DOMAIN}:21116
API_SERVER=https://${DOMAIN}/api

# Docker Configuration
COMPOSE_PROJECT_NAME=rustdesk
RESTART_POLICY=unless-stopped

# Server Ports
TCP_PORT=21116
UDP_PORT=21117
WEB_PORT=21118
HTTPS_PORT=443
